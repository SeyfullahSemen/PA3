<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<GridPane alignment="center" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/8.0.172-ea"
          xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller">
    <columnConstraints>
        <ColumnConstraints/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints/>
    </rowConstraints>
    <children>
        <TabPane prefHeight="700.0" prefWidth="1000" tabClosingPolicy="UNAVAILABLE">
            <tabs>
                <Tab id="encryptButtonTab" text="Encrypt">
                    <content>
                        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                            <children>
                                <TextField id="sentenceToText" fx:id="sentenceToText" layoutX="257.0" layoutY="99.0"
                                           promptText="enter sentence...."/>
                                <Button id="encryptNowButton" fx:id="encryptNowButton" layoutX="450.0" layoutY="100.0"
                                        mnemonicParsing="false" onMousePressed="#onEncryptButtonClick" text="Encrypt"/>
                                <AnchorPane layoutX="10.0" layoutY="231.0" prefHeight="228.0" prefWidth="685.0">
                                    <children>
                                        <Label fx:id="encryptedMessageLabel" alignment="CENTER" layoutX="14.0"
                                               layoutY="14.0" text="message: " textAlignment="CENTER"/>
                                        <Label fx:id="foundPrimeNumberLabel" alignment="CENTER" layoutX="14.0"
                                               layoutY="68.0" text="Found prime number: "/>
                                        <Label fx:id="calculatedQLabel" layoutX="14.0" layoutY="104.0"
                                               text="Found Q: "/>
                                    </children>
                                </AnchorPane>
                            </children>
                        </AnchorPane>
                    </content>
                </Tab>
                <Tab id="decryptButtonTab" text="Decrypt">
                    <content>
                        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0"/>
                    </content>
                </Tab>
            </tabs>
        </TabPane>
    </children>
</GridPane>
